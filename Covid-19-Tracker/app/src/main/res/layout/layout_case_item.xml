<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_drop_list_item"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    android:background="@color/md_white_1000"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/tv_case_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Cases No."
        android:textColor="@android:color/secondary_text_light"
        android:textSize="14sp"
        app:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_case_label_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Age: "
        android:textSize="12sp"
        app:fontFamily="@font/roboto"
        app:layout_constraintStart_toStartOf="@+id/tv_case_number"
        app:layout_constraintTop_toBottomOf="@+id/tv_case_number" />

    <TextView
        android:id="@+id/tv_case_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="52 years old"
        android:textSize="12sp"
        app:fontFamily="@font/roboto"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_case_label_age"
        app:layout_constraintStart_toEndOf="@+id/tv_case_label_age" />

    <TextView
        android:id="@+id/tv_case_label_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Gender: "
        android:textSize="12sp"
        app:fontFamily="@font/roboto"
        app:layout_constraintStart_toStartOf="@+id/tv_case_label_age"
        app:layout_constraintTop_toBottomOf="@+id/tv_case_label_age" />

    <TextView
        android:id="@+id/tv_case_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:textSize="12sp"
        app:fontFamily="@font/roboto"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_case_label_gender"
        app:layout_constraintStart_toEndOf="@+id/tv_case_label_gender" />

    <TextView
        android:id="@+id/tv_case_label_nationality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Nationality: "
        android:textSize="12sp"
        app:fontFamily="@font/roboto"
        app:layout_constraintStart_toStartOf="@+id/tv_case_label_gender"
        app:layout_constraintTop_toBottomOf="@+id/tv_case_label_gender" />

    <TextView
        android:id="@+id/tv_case_nationality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filipino"
        android:textSize="12sp"
        app:fontFamily="@font/roboto"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_case_label_nationality"
        app:layout_constraintStart_toEndOf="@+id/tv_case_label_nationality" />

    <TextView
        android:id="@+id/tv_case_label_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Hospital admitted to: "
        android:textSize="12sp"
        app:fontFamily="@font/roboto"
        app:layout_constraintStart_toStartOf="@+id/tv_case_label_nationality"
        app:layout_constraintTop_toBottomOf="@+id/tv_case_label_nationality" />

    <TextView
        android:id="@+id/tv_case_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAGAYAN VALLEY MEDICAL CENTER"
        android:textSize="12sp"
        app:fontFamily="@font/roboto"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_case_label_hospital"
        app:layout_constraintStart_toEndOf="@+id/tv_case_label_hospital" />

    <TextView
        android:id="@+id/tv_case_status"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_status_other"
        android:padding="1dp"
        android:text="Asymptomatic"
        android:textAlignment="center"
        android:textColor="@color/md_white_1000"
        android:textSize="12sp"
        app:fontFamily="@font/roboto_bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_case_gender"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/v_case_divider"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_marginTop="16dp"
        android:background="@color/md_grey_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_case_hospital" />
</androidx.constraintlayout.widget.ConstraintLayout>