<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_countries_sort_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="Sort Countries/Regions/Sovereignty"
        android:textColor="@android:color/primary_text_light"
        android:textSize="14sp"
        android:textStyle="bold" />


    <ListView
        android:id="@+id/rv_countries_sort_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_countries_sort_title"
        android:layout_marginBottom="8dp"
        android:divider="@color/design_default_color_background"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false" />


</RelativeLayout>
