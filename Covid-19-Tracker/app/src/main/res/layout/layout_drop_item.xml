<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_drop_list_item"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    android:background="@color/md_white_1000"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/tv_drop_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="C999994"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="14sp"
        app:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_drop_label_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Age: "
        android:textSize="12sp"
        app:fontFamily="@font/roboto"
        app:layout_constraintStart_toStartOf="@+id/tv_drop_code"
        app:layout_constraintTop_toBottomOf="@+id/tv_drop_code" />

    <TextView
        android:id="@+id/tv_drop_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="52 years old"
        android:textSize="12sp"
        app:fontFamily="@font/roboto"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_drop_label_age"
        app:layout_constraintStart_toEndOf="@+id/tv_drop_label_age" />

    <TextView
        android:id="@+id/tv_drop_label_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Gender: "
        android:textSize="12sp"
        app:fontFamily="@font/roboto"
        app:layout_constraintStart_toStartOf="@+id/tv_drop_label_age"
        app:layout_constraintTop_toBottomOf="@+id/tv_drop_label_age" />

    <TextView
        android:id="@+id/tv_drop_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:textSize="12sp"
        app:fontFamily="@font/roboto"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_drop_label_gender"
        app:layout_constraintStart_toEndOf="@+id/tv_drop_label_gender" />

    <TextView
        android:id="@+id/tv_drop_label_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Region: "
        android:textSize="12sp"
        app:fontFamily="@font/roboto"
        app:layout_constraintStart_toStartOf="@+id/tv_drop_label_gender"
        app:layout_constraintTop_toBottomOf="@+id/tv_drop_label_gender" />

    <TextView
        android:id="@+id/tv_drop_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Region IV-A:CALABARZON"
        android:textSize="12sp"
        app:fontFamily="@font/roboto"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_drop_label_region"
        app:layout_constraintStart_toEndOf="@+id/tv_drop_label_region" />

    <TextView
        android:id="@+id/tv_drop_label_province"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Province/City: "
        android:textSize="12sp"
        app:fontFamily="@font/roboto"
        app:layout_constraintStart_toStartOf="@+id/tv_drop_label_region"
        app:layout_constraintTop_toBottomOf="@+id/tv_drop_label_region" />

    <TextView
        android:id="@+id/tv_drop_province"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bacoor City"
        android:textSize="12sp"
        app:fontFamily="@font/roboto"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_drop_label_province"
        app:layout_constraintStart_toEndOf="@+id/tv_drop_label_province" />

    <TextView
        android:id="@+id/tv_drop_status"
        android:layout_width="80dp"
        android:layout_height="18dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_status_active"
        android:padding="1dp"
        android:text="Active"
        android:textAlignment="center"
        android:textColor="@color/md_white_1000"
        android:textSize="12sp"
        app:fontFamily="@font/roboto_bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_drop_gender"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/v_drop_divider"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_marginTop="16dp"
        android:background="@color/md_grey_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_drop_province" />
</androidx.constraintlayout.widget.ConstraintLayout>