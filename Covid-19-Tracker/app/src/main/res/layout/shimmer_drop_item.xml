<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    android:background="@color/md_white_1000"
    android:layoutAnimation="@anim/fall_down_layout_animation">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_drop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmer_auto_start="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/shimmer_drop_code"
                android:layout_width="80dp"
                android:layout_height="12dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/rounded_shimmer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/shimmer_drop_age"
                android:layout_width="110dp"
                android:layout_height="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_shimmer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shimmer_drop_code" />

            <TextView
                android:id="@+id/shimmer_drop_status"
                android:layout_width="80dp"
                android:layout_height="14dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_shimmer"
                app:layout_constraintBaseline_toBaselineOf="@+id/shimmer_drop_gender"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/shimmer_drop_gender"
                android:layout_width="110dp"
                android:layout_height="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_shimmer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shimmer_drop_age" />

            <TextView
                android:id="@+id/shimmer_drop_region"
                android:layout_width="180dp"
                android:layout_height="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_shimmer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shimmer_drop_gender" />

            <TextView
                android:id="@+id/shimmer_drop_province"
                android:layout_width="180dp"
                android:layout_height="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_shimmer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shimmer_drop_region" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <View
        android:id="@+id/v_drop_divider"
        android:layout_width="0dp"
        android:layout_height=".5dp"
        android:layout_marginTop="8dp"
        android:background="@color/md_grey_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_drop" />
</androidx.constraintlayout.widget.ConstraintLayout>

