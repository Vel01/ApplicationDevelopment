<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_white_1000"
    android:layoutAnimation="@anim/fall_down_layout_animation"
    android:paddingTop="16dp">


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_drop_code"
        android:layout_width="60dp"
        android:layout_height="12dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmer_auto_start="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_shimmer" />
    </com.facebook.shimmer.ShimmerFrameLayout>


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_drop_age"
        android:layout_width="90dp"
        android:layout_height="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/shimmer_drop_code"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_drop_code"
        app:shimmer_auto_start="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_shimmer" />
    </com.facebook.shimmer.ShimmerFrameLayout>


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_drop_gender"
        android:layout_width="90dp"
        android:layout_height="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/shimmer_drop_age"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_drop_age"
        app:shimmer_auto_start="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_shimmer" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_drop_region"
        android:layout_width="180dp"
        android:layout_height="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/shimmer_drop_gender"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_drop_gender"
        app:shimmer_auto_start="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_shimmer" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_drop_province"
        android:layout_width="180dp"
        android:layout_height="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/shimmer_drop_region"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_drop_region"
        app:shimmer_auto_start="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_shimmer" />
    </com.facebook.shimmer.ShimmerFrameLayout>


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_drop_status"
        android:layout_width="80dp"
        android:layout_height="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39999998"
        app:shimmer_auto_start="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_shimmer" />
    </com.facebook.shimmer.ShimmerFrameLayout>


    <View
        android:id="@+id/v_drop_divider"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_marginTop="16dp"
        android:background="@color/md_grey_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_drop_province" />

</androidx.constraintlayout.widget.ConstraintLayout>

